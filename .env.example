# CodeVision AI - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM API Keys (at least one required for AI-powered summaries)
# =============================================================================

# Anthropic API Key (for Claude models)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI API Key (alternative to Anthropic)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-key-here

# =============================================================================
# Model Configuration
# =============================================================================

# Default LLM model to use
# Options: claude-3-5-sonnet-20241022, gpt-4o, gpt-4-turbo
LLM_MODEL=claude-3-5-sonnet-20241022

# Temperature for LLM responses (0.0 - 1.0)
LLM_TEMPERATURE=0.3

# Maximum tokens for LLM responses
LLM_MAX_TOKENS=2000

# =============================================================================
# Server Configuration
# =============================================================================

# Server host and port
HOST=0.0.0.0
PORT=8000

# Enable debug mode (set to false in production)
DEBUG=true

# CORS origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# Storage Configuration
# =============================================================================

# Temporary file storage directory
TEMP_DIR=/tmp/codevision

# Maximum upload size in MB
MAX_UPLOAD_SIZE_MB=50

# =============================================================================
# Optional: Vector Store (for RAG-based analysis)
# =============================================================================

# ChromaDB persistence directory
# CHROMA_PERSIST_DIR=./chroma_db

# FAISS index path
# FAISS_INDEX_PATH=./faiss_index

# =============================================================================
# Optional: Logging
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path (leave empty for stdout only)
# LOG_FILE=./logs/codevision.log
